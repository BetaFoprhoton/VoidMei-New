Weapon{
  trigger:t="gunner0"
  blk:t="gameData/Weapons/groundModels_weapons/35mm_Oerlikon_KDA_user_cannon.blk"
  emitter:t="bone_gun_barrel_01"
  flash:t="emtr_gun_flame_01"
  useEmitter:b=yes
  recoilMultiplier:r=0.2
  recoilOffset:r=0.045
  barrelDP:t="gun_barrel_01_dm"
  breechDP:t="cannon_breech_01_dm"
  defaultYaw:r=0.0
  defaultPitch:r=0.0
  speedYaw:r=90.0
  speedPitch:r=42.0
  bullets:i=340
  fireConeAngle:r=15.0
  ChainfireTime:r=3.0
  DelayAfterShoot:r=3.0
  accuracyAir:r=1.5
  accuracyGnd:r=1.0
  errMeasureVel:r=0.0
  errMeasureVelFast:r=0.0
  errMeasureVelFwdShift:r=0.0
  errMeasureVelDir:r=0.0
  errTargettingOn100kmph:r=0.0
  errTargetting:r=3.0
  errExplTime:r=0.0

  turret{
    head:t="bone_turret"
    gun:t="bone_gun"
    barrel:t="bone_gun_barrel_01"
    gunnerDm:t="gunner_dm"
    loaderDm:t="loader_01_dm"
    verDriveDm:t="drive_turret_v_dm"
    horDriveDm:t="drive_turret_h_dm"

    linkedAnimPart{
      verNode:t="bone_camera_gunner"
      verLimits:p2=-180.0, 180.0
      verOriginLimits:p2=-180.0, 180.0
    }

    linkedAnimPart{
      verNode:t="bone_radar"
      verLimits:p2=0.0, 65.0
      verOriginLimits:p2=-5.0, 85.0
    }
  }

  limits{
    yaw:p2=-180.0, 180.0
    pitch:p2=-5.0, 85.0
  }
}

