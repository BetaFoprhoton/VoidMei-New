Weapon{
  trigger:t="gunner0"
  triggerGroup:t="primary"
  blk:t="gameData/Weapons/groundModels_weapons/37mm_M1A2_user_cannon.blk"
  emitter:t="bone_gun_barrel_03"
  flash:t="emtr_gun_flame_03"
  useEmitter:b=yes
  defaultYaw:r=0.0
  defaultPitch:r=25.0
  barrelDP:t="gun_barrel_03_dm"
  breechDP:t="cannon_breech_03_dm"
  speedYaw:r=25.0
  speedPitch:r=20.0
  bullets:i=240
  fireConeAngle:r=15.0
  ChainfireTime:r=3.0
  DelayAfterShoot:r=3.0
  accuracyAir:r=1.5
  accuracyGnd:r=1.0
  errMeasureVel:r=0.0
  errMeasureVelFast:r=0.0
  errMeasureVelFwdShift:r=0.0
  errMeasureVelDir:r=0.0
  errTargettingOn100kmph:r=0.0
  errTargetting:r=3.0
  errExplTime:r=0.0

  turret{
    head:t="bone_turret"
    gun:t="bone_gun"
    barrel:t="bone_gun_barrel_03"
    gunnerDm:t="gunner_dm"
    verDriveDm:t="drive_turret_v_dm"
    horDriveDm:t="drive_turret_h_dm"

    linkedAnimPart{
      verNode:t="bone_camera_gunner"
      verLimits:p2=-180.0, 180.0
      verOriginLimits:p2=-180.0, 180.0
    }
  }

  limits{
    yaw:p2=-180.0, 180.0
    pitch:p2=-5.0, 85.0
  }

  limitsTable{
    lim1:p4=-180.0, -40.0, -5.0, 85.0
    lim2:p4=-40.0, 40.0, 25.0, 85.0
    lim3:p4=40.0, 180.0, -5.0, 85.0
  }
}

