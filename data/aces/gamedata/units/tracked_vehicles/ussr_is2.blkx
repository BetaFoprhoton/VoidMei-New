DamageEffects{

  part{
    name:t="body_dm"
    name:t="armor3_dm"

    onHit{
    }

    onKill{
      fire:r=2.0
      smoke:r=5.0
      expl:r=5.0
    }
  }

  part{
    name:t="engine_dm"

    onHit{
      smoke:r=0.1
    }

    onKill{
      body_dm:r=1.0
    }
  }
}

